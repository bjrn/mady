// @flow

type LocaleFunctionT = (data: any) => string;
type MapOfLocaleFunctionsT = { [key: string]: LocaleFunctionT };

declare export default {
  // Translate function
  (utf8: string, data: ?Object): string,

  // Piggybacked utility functions
  addLocales: (lang: string, locales: MapOfLocaleFunctionsT) => void,
  addLocaleCode: (lang: string, localeCode: string) => void,
  setLocales: (langOrLocales: string | MapOfLocaleFunctionsT) => ?string,
  getLocales: (lang: string) => {
    lang: ?string,
    result: ?MapOfLocaleFunctionsT,
  },
  getLocaleCode: (lang: string) => {
    lang: ?string,
    result: ?string,
  },
  getParentBcp47: (bcp47: string) => ?string,
};
